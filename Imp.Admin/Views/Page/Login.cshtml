@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/css")
</head>
<body style="background-color: #f7f7f7">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 tdiv">
                <div class="row tt">
                    基于CRM的多渠道一体化营销平台
                </div>
                <div class="row" style="padding: 15px;">
                    @using (Html.BeginForm("Login", "Page", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon glyphicon glyphicon-user"></div>
                                    <input class="form-control" type="text" placeholder="用户名">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon glyphicon glyphicon-lock"></div>
                                    <input class="form-control" type="password" placeholder="密码">
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-warning">登 录</button>
                    }
                </div>

            </div>
        </div>
    </div>
</body>
</html>
