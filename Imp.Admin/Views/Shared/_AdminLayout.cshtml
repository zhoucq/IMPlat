<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    
    <link rel="stylesheet" href="@Url.Content("~/Content/reset.css")" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/Content/text.css")" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/Content/grid.css")" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/Content/layout.css")" media="screen" />
    <link rel="stylesheet" href="@Url.Content("~/Content/nav.css")" media="screen" />
    @Styles.Render("~/Content/dataTables/css")
    @Scripts.Render("~/bundles/dataTables")
</head>

<body>
    <div class="container_12">
        <div class="grid_12 header-repeat">
            <div id="branding">
                <div class="floatleft">
                    <img src="@Url.Content("~/Content/img/logo.png")" alt="Logo" />
                </div>
                <div class="floatright">
                    <div class="floatleft">
                        <img src="@Url.Content("~/Content/img/img-profile.jpg")" alt="Profile Pic" />
                    </div>
                    <div class="floatleft marginleft10">
                        <ul class="inline-ul floatleft">
                            <li>你好 Admin</li>
                            <li><a href="#">设置</a></li>
                            <li><a href="#">注销</a></li>
                        </ul>
                        <br />
                        <span class="small grey">Last Login: 3 hours ago</span>
                    </div>
                </div>
                <div class="clear">
                </div>
            </div>
        </div>
        <div class="clear">
        </div>


        <div class="grid_12">
            <ul class="nav main">
                <li><a href="dashboard.html"><span>文档中心</span></a> </li>
                <li class="ic-form-style"><a href="javascript:"><span>系统设置</span></a>
                    <ul>
                        <li><a href="form-controls.html">Forms</a> </li>
                        <li><a href="buttons.html">Buttons</a> </li>
                        <li><a href="form-controls.html">Full Page Example</a> </li>
                        <li><a href="table.html">Page with Sidebar Example</a> </li>
                    </ul>
                </li>
                <li class="ic-typography"><a href="typography.html"><span>Typography</span></a></li>
                <li class="ic-charts"><a href="charts.html"><span>Charts & Graphs</span></a></li>
                <li class="ic-grid-tables"><a href="table.html"><span>Data Table</span></a></li>
                <li class="ic-gallery dd"><a href="javascript:"><span>Image Galleries</span></a>
                    <ul>
                        <li><a href="image-gallery.html">Pretty Photo</a> </li>
                        <li><a href="gallery-with-filter.html">Gallery with Filter</a> </li>
                    </ul>
                </li>
                <li class="ic-notifications"><a href="notifications.html"><span>Notifications</span></a></li>

            </ul>
        </div>
        <div class="clear">
        </div>
        <div class="grid_12">
            @RenderBody()
        </div>
        <div class="clear">
        </div>
    </div>

</body>
</html>
